	function idCked(){
		var userId = document.getElementsByName('idcked');
		debugger;   
		$.ajax({
			  
			url: "./userIdcked.do",
			data :{userId : userId},     
			success : function (data){         
				if ( data = 1){
					alert("사용가능한 아이디 입니다.");
				}else{
					alert(" 사용불가능한 아이디 입니다.");
				}
			} 
			
		});
	}
</script>

